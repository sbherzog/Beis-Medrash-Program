@using BeisMedrashProgram.data;
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Register";
}
<style>
    .wrapper-page{width:900px;}
</style>

<form method="POST" id="form-register" enctype="multipart/form-data" action="/account/register/">
    <div class="panel-heading">
        <h4 class="text-center"> Create your acoount to <strong class="text-custom">Beis Medrash Program</strong></h4>
    </div>

    @if (!String.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            @Model.ErrorMessage
        </div>
    }

    <div class="signin-container">
        <div class="col-md-6 beis-medrash-container">
            <h3 class="text-custom">Beis Medrash Info</h3>

            <div class="beis-medrash-code-registered">
                <a href="#" class="beis-medrash-already-registered">Beis Medrash already Registered (Create only new user)</a>
            </div> 
            
            <label for="Beis_Medrash_Name">Beis Medrash Name: *</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="fa fa-building-o"></span></div>
                    <input type="text" name="BeisMedrashName" id="Beis_Medrash_Name" placeholder="Beis Medrash Name" class="form-control" />
                </div>
                <div class="error"></div>
            </div>

            <div class="beis-medrash-code-sec" style="display:none">
                <label for="Beis_Medrash_Code">Beis Medrash Code: *</label>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="fa fa-building-o"></span></div>
                        <input type="text" name="BeisMedrashCode" id="Beis_Medrash_Code" placeholder="Beis Medrash Code" class="form-control" />
                    </div>
                    <div class="error"></div>
                </div>
            </div>

            <div class="beis-medrash-sec">
                <label for="Beis_Medrash_Address">Address:</label>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="fa fa-map-marker"></span></div>
                        <input type="text" name="Address" id="Beis_Medrash_Address" placeholder="Address" class="form-control" />
                    </div>
                    <div class="error"></div>
                </div>

                <div class="col-md-4 p-0">
                    <label for="Beis_Medrash_City">City:</label>
                    <div class="form-group">
                        <input type="text" name="City" id="Beis_Medrash_City" placeholder="City" class="form-control" />
                        <div class="error"></div>
                    </div>
                </div>
                <div class="col-md-4 beis-medrash-state-container">
                    <label for="Beis_Medrash_State">State:</label>
                    <div class="form-group">
                        <input type="text" name="State" id="Beis_Medrash_State" placeholder="State" class="form-control" />
                        <div class="error"></div>
                    </div>
                </div>
                <div class="col-md-4 p-0">
                    <label for="Beis_Medrash_Zip">Zip:</label>
                    <div class="form-group">
                        <input type="text" name="Zip" id="Beis_Medrash_Zip" placeholder="Zip" class="form-control" />
                        <div class="error"></div>
                    </div>
                </div>
                <div class="clearfix"></div>

                <label for="Beis_Medrash_Phone">Phone:</label>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-phone-alt"></span></div>
                        <input type="text" name="Phone" id="Beis_Medrash_Phone" placeholder="Phone" class="form-control" />
                    </div>
                    <div class="error"></div>
                </div>
                <div class="form-group">
                    <label>Beis Medrash Logo</label><br />
                    <div class="btn upload-logo-btn"><i class="fa fa-upload"></i>&nbsp; Choose File <div class="file-name"></div></div>
                    <input type="file" class="form-control upload-logo-input hidden" placeholder="" name="file" accept="image/*" />
                </div>
            </div>
        </div>

        <div class="col-md-6 Login-Info-container">
            <h3 class="text-custom">Login Info</h3>

            <label for="first_Name">First Name: *</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <input type="text" name="firstName" id="first_Name" placeholder="First Name" class="form-control" />
                </div>
                <div class="error"></div>
            </div>

            <label for="last_name">Last Name: *</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <input type="text" name="lastName" id="last_name" placeholder="Last Name" class="form-control" />
                </div>
                <div class="error"></div>
            </div>

            <label for="email">Email: *</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                    <input type="text" id="email" name="email" placeholder="Email Address" class="form-control" />
                </div>
                <div class="error"></div>
            </div>

            <label for="password">Password: *</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                    <input type="password" id="password" name="password" placeholder="Password" class="form-control" />
                </div>
                <div class="error"></div>
            </div>

            <label for="password">Retype password: *</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                    <input type="password" id="password-match" placeholder="Retype password" class="form-control" />
                </div>
                <div class="error"></div>
            </div>
        </div>
        <button type="button" class="btn btn-primary submit-btn" id="submit-button">Submit</button>

        <div class="link-sec">
            <div class="left-link"><a href="/account/login/">Login</a></div>
            <div class="clearfix"></div>
        </div>
    </div>
</form>

@section scripts
{
<script src="~/Scripts/Account/register.js"></script>
}
