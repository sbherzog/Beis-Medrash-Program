@using BeisMedrashProgram.data;

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Reset Password";
}

<form method="post" action="/Account/Reset">
    <div class="panel-heading">
        <h4 class="text-center"><strong class="text-custom">Beis Medrash Program</strong><br />Reset Password</h4>
    </div>
    <div class="signin-container">
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon glyphicon-lock"></span> </div>
                <input type="password" name="password" class="form-control input-lg" placeholder="Password" />
            </div>
        </div>
        <input type="hidden" name="token" value="@Model.Guid" />
        <button class="btn btn-primary submit-btn">Reset</button>

        <div class="link-sec">
            <div class="left-link"><a href="/account/login/">Login</a></div>
            <div><a class="right-link" href="/account/register/">Create a New Account</a></div>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
